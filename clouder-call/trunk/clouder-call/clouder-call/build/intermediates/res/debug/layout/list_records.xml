<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@drawable/bg_call_list">


    <com.clouder.watch.call.ui.RoundImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/app_name"/>

    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:textColor="#FFFFFFFF"
            android:textSize="23sp" />
        <TextView android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:textColor="#FFFFFFFF"
			android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp"
            android:textSize="19sp" />

    </LinearLayout>
</LinearLayout><!-- From: file:/D:/SVN/Clouder_Watch/PJ_SRC/clouder-call/trunk/clouder-call/clouder-call/src/main/res/layout/list_records.xml -->
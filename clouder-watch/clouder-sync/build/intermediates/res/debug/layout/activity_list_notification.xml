<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                ></RelativeLayout>

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/list_diver"
                android:dividerHeight="1dp"
                android:paddingBottom="@dimen/notification_list_padding_bottom"
                android:paddingLeft="@dimen/notification_list_padding_left"
                android:paddingRight="@dimen/notification_list_padding_right"
                android:paddingTop="@dimen/notification_list_padding_top"
                android:scrollbars="none" />
        </LinearLayout>

        <TextView
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_notification"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:visibility="gone" />
    </RelativeLayout>


</android.support.wearable.view.BoxInsetLayout><!-- From: file:/D:/SVN/Clouder_Watch/PJ_SRC/clouder-watch/clouder-sync/src/main/res/layout/activity_list_notification.xml -->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:orientation="vertical">

   <!-- <include layout="@layout/activity_title_template"></include>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/img_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="版本号"
            android:textColor="@color/font_tip"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="1.0"
            android:textColor="@color/font_tip"
            android:textSize="16sp" />
    </LinearLayout>

    <include layout="@layout/border_template"></include>

    <RelativeLayout
        android:id="@+id/check_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_view_height"
        android:background="@drawable/selector_list_item"
        android:layout_below="@+id/unpaired_list"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="检查手机版本更新"
            android:textColor="@color/font_title"
            android:textSize="@dimen/item_title_text_size" />


        <ImageButton
            android:id="@+id/add_more_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_more" />

    </RelativeLayout>

    <include layout="@layout/border_template"></include>

    <RelativeLayout
        android:id="@+id/user_helper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_view_height"
        android:layout_below="@+id/unpaired_list"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:background="@drawable/selector_list_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="使用帮助"
            android:textColor="@color/font_title"
            android:textSize="@dimen/item_title_text_size" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_more" />

    </RelativeLayout>

    <include layout="@layout/border_template"></include>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息推送"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/item_title_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_text_margin_top"
                    android:text="关闭此项，您的手表将不接收任何推送消息"
                    android:textColor="@color/font_tip"
                    android:textSize="@dimen/item_tiny_text_size" />

            </LinearLayout>
            <com.clouder.watch.common.widget.SwitchButton xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/switch_push"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cursor="@drawable/cursor"
                app:selectedBG="#0ba81b"
                app:unselectedBG="#999999"
                app:trackWidth="64dp"
                app:trackPadding="1dp"
                app:status="OFF"
                app:shadowXDiff="0dp"
                app:shadowYDiff="0dp"
                app:shadow="@drawable/switch_button_shadow"
                app:shadowExpand="0dp"
                app:moveDuration="50" />


        </RelativeLayout>

        <include layout="@layout/border_template"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息震动"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/item_title_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/item_text_margin_top"
                    android:layout_height="wrap_content"
                    android:text="关闭此项，您的手表将静默推送消息"
                    android:textColor="@color/font_tip"
                    android:textSize="@dimen/item_tiny_text_size" />

            </LinearLayout>

            <com.clouder.watch.common.widget.SwitchButton xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/switch_shock"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cursor="@drawable/cursor"
                app:selectedBG="#0ba81b"
                app:unselectedBG="#999999"
                app:trackWidth="64dp"
                app:trackPadding="1dp"
                app:status="OFF"
                app:shadowXDiff="0dp"
                app:shadowYDiff="0dp"
                app:shadow="@drawable/switch_button_shadow"
                app:shadowExpand="0dp"
                app:moveDuration="50" />

        </RelativeLayout>

        <include layout="@layout/border_template"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App黑名单设置"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/item_title_text_size" />

                <TextView
                    android:layout_marginTop="@dimen/item_text_margin_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您选中的App将不推送消息至手表端"
                    android:textColor="@color/font_tip"
                    android:textSize="@dimen/item_tiny_text_size" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_add_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_add" />
        </RelativeLayout>

        <include layout="@layout/border_template"></include>
    </LinearLayout>
</LinearLayout>
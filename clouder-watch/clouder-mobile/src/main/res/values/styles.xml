<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/my_actionbar_style</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionBarOverflowStyle</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:title">@string/title_empty</item>
    </style>

    <style name="my_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/bg_head</item>

    </style>

    <style name="ActionBarOverflowStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="Switch">
        <item name="android:track">@drawable/channel</item>
        <item name="android:thumb">@drawable/switch_button</item>
        <item name="android:textOn">开</item>
        <item name="android:textOff">关</item>
        <item name="android:thumbTextPadding">2dip</item>
        <item name="android:switchMinWidth">72dp</item>
        <item name="android:switchPadding">12dip</item>
        <item name="android:height">0dip</item>
    </style>

</resources>

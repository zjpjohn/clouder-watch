<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:orientation="vertical">

    <!--<include layout="@layout/activity_title_template"></include>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="关闭屏幕锁"
                android:textColor="@color/font_title"
                android:textSize="@dimen/item_title_text_size" />

            <com.clouder.watch.common.widget.SwitchButton xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/switcher"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cursor="@drawable/cursor"
                app:selectedBG="#0ba81b"
                app:unselectedBG="#999999"
                app:trackWidth="64dp"
                app:trackPadding="1dp"
                app:status="OFF"
                app:shadowXDiff="0dp"
                app:shadowYDiff="0dp"
                app:shadow="@drawable/switch_button_shadow"
                app:shadowExpand="0dp"
                app:moveDuration="50" />

        </RelativeLayout>

        <include layout="@layout/border_template"></include>

        <RelativeLayout
            android:id="@+id/btn_changePwd"
            android:background="@drawable/selector_list_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height"
            android:paddingLeft="20dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="修改密码"
                android:textColor="@color/font_title"
                android:textSize="@dimen/item_title_text_size" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_more" />
        </RelativeLayout>

        <include layout="@layout/border_template"></include>
    </LinearLayout>
</LinearLayout><!-- From: file:/D:/SVN/Clouder_Watch/PJ_SRC/clouder-watch/clouder-mobile/src/main/res/layout/activity_locker.xml -->
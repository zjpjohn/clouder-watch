<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:app="http://schemas.android.com/apk/res-auto"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/frame_layout"
        style="@style/list_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_box="left|bottom|right">

        <android.support.wearable.view.WearableListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/list_view_margin_bottom"
            android:layout_marginTop="@dimen/list_view_margin_top"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:listSelector="@android:color/transparent"/>

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/list_view_title_margin_top"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/activity_about_title"
            android:textColor="@color/white"
            android:textSize="@dimen/title_font_size"
            android:textStyle="bold"/>

    </RelativeLayout>

</android.support.wearable.view.BoxInsetLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    style="@style/list_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/list_view_title_margin_top"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/activity_adjust_brightness_title"
            android:textColor="@color/white"
            android:textSize="@dimen/title_font_size"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/select_level"
            android:layout_width="@dimen/brightness_adjust_width"
            android:layout_height="@dimen/item_view_default_height"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_brightness_adjust"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level_auto"
                android:layout_width="@dimen/brightness_adjust_level_width"
                android:layout_height="@dimen/brightness_adjust_level_width"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_settings_light_auto"
                android:gravity="center"
                android:text="@string/settings_item_brightness_adjust_state_auto"
                android:textColor="@color/white"
                android:textSize="@dimen/text_brightness_adjust_auto"/>

            <LinearLayout
                android:id="@+id/level_1"
                android:layout_width="@dimen/brightness_adjust_level_width"
                android:layout_height="@dimen/brightness_adjust_level_width"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/btn_settings_light_1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/level_2"
                android:layout_width="@dimen/brightness_adjust_level_width"
                android:layout_height="@dimen/brightness_adjust_level_width"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_settings_light_2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/level_3"
                android:layout_width="@dimen/brightness_adjust_level_width"
                android:layout_height="@dimen/brightness_adjust_level_width"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_settings_light_3"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/level_4"
                android:layout_width="@dimen/brightness_adjust_level_width"
                android:layout_height="@dimen/brightness_adjust_level_width"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_settings_light_4"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/level_5"
                android:layout_width="@dimen/brightness_adjust_level_width"
                android:layout_height="@dimen/brightness_adjust_level_width"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_settings_light_5"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/select_level"
            android:layout_alignStart="@+id/select_level"
            android:layout_below="@+id/select_level"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="24sp"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.wearable.view.BoxInsetLayout><!-- From: file:/D:/SVN/Clouder_Watch/PJ_SRC/clouder-watch/clouder-settings/src/main/res/layout/activity_brightness.xml -->